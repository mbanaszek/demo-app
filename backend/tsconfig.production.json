{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "lib": ["es2015", "es2016"],
    "rootDir": "./",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": false,
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "inlineSources": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": [
    "express-app/**/*", "github-integration/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
